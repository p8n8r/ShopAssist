<Window x:Class="ShopAssist.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopAssist"
        mc:Ignorable="d"
        Title="Shop Assist" Height="450" Width="700" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Background="#FF1CCC1C">
            <Grid Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Button Content="Inventory" Command="{Binding inventoryCmd}" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" Height="25" Margin="10"/>
                <Button Content="Customers" Command="{Binding customersCmd}" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" Height="25" Margin="10"/>
                <Button Content="Categories" Command="{Binding categoriesCmd}" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" Height="25" Margin="10"/>
                <Button Content="Checkout" Command="{Binding checkoutCmd}" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" Height="25" Margin="10"/>
                <Button Content="Directions" Command="{Binding directionsCmd}" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="25" Margin="10"/>
            </Grid>
        </Grid>
         <Frame Grid.Row="1" Name="mainFrame" NavigationUIVisibility="Hidden" Background="#FFDEFFC3"/>
    </Grid>
</Window>
