<Page x:Class="ShopAssist.Views.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopAssist"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="WelcomePage">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Content="Welcome!" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5,5,5,30"/>
        <TextBlock Grid.Row="1" Grid.Column="0" TextWrapping="WrapWithOverflow" Text="View the shop's inventory." HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5,0,5,0" FontSize="18" TextAlignment="Center" Margin="15,0,15,0" Width="NaN"/>
        <TextBlock Grid.Row="1" Grid.Column="1" TextWrapping="WrapWithOverflow" Text="View the customer details." HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15,0,15,0" FontSize="18" TextAlignment="Center"/>
        <TextBlock Grid.Row="1" Grid.Column="2" TextWrapping="WrapWithOverflow" Text="View the checkout lines." HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15,0,15,0" FontSize="18" TextAlignment="Center"/>
        <TextBlock Grid.Row="1" Grid.Column="3" TextWrapping="WrapWithOverflow" Text="View navigation of your shopping list." HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15,0,15,0" FontSize="18" TextAlignment="Center"/>
    </Grid>
</Page>
